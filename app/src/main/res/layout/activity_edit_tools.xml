<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_white_card_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="H1" android:padding="8dp" android:textSize="18sp" android:textStyle="bold" android:textColor="#000000"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="H2" android:padding="8dp" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>

        <View android:layout_width="1dp" android:layout_height="24dp" android:background="#DDD" android:layout_marginHorizontal="8dp"/>

        <ImageButton android:id="@+id/btnBold" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_bold" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="Bold"/>

        <ImageButton android:id="@+id/btnItalic" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_italic" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="Italic"/>

        <ImageButton android:id="@+id/btnUnderline" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_under" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="Underline"/>

        <View android:layout_width="1dp" android:layout_height="24dp" android:background="#DDD" android:layout_marginHorizontal="8dp"/>

        <ImageButton android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/ic_left" android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/ic_center" android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/ic_right" android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="warna" android:textSize="12sp" android:layout_marginEnd="8dp"/>

        <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollbars="none">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">

                <View
                    android:id="@+id/colorRed"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/ic_brown" />

                <View
                    android:id="@+id/colorBlue"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/ic_blue"/>

                <View
                    android:id="@+id/colorOrange"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/ic_red"/>

                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="4dp" android:src="@drawable/ic_color_wheel"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>