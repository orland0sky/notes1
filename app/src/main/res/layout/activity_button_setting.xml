<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup_setelan"
    android:orientation="vertical"
    android:elevation="8dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/menuTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema"
        android:textSize="20sp"
        android:padding="12dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/menuBerbagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berbagi"
        android:textSize="20sp"
        android:padding="12dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/menuMasukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukan"
        android:textSize="20sp"
        android:padding="12dp"
        android:textColor="#000000"/>

    <RelativeLayout
        android:id="@+id/menuUrutkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urutkan:"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_down" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menuKeluar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_logout"
            android:contentDescription="Keluar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:textColor="#E53935"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>