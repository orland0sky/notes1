<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="30dp"
    android:gravity="center"
    android:background="@drawable/bg_white_card_rounded">

    <LinearLayout
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="40dp">
        <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/ic_camera"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Kamera" android:textColor="#BDBDBD"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/ic_album"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Album" android:textColor="#BDBDBD"/>
    </LinearLayout>
</LinearLayout>